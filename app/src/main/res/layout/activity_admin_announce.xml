<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminAnnounceActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the details below to enter the Announcement: "
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_margin="20dp"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:minHeight="48dp"
                android:background="@color/white"
                android:textColorHint="@color/black"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Announcement Heading"
                android:textSize="20sp"
                android:id="@+id/topic"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/black"
                android:minHeight="48dp"
                android:background="@color/white"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Announcement Date"
                android:textSize="20sp"
                android:id="@+id/date"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:minHeight="48dp"
                android:background="@color/white"
                android:textColorHint="@color/black"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Announcement Topic"
                android:textSize="20sp"
                android:id="@+id/subject"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:minHeight="48dp"
                android:background="@color/white"
                android:textColorHint="@color/black"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Full Announcement "
                android:textSize="20sp"
                android:id="@+id/full"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/upload"
                android:text="Upload"
                android:textStyle="bold"
                android:textColor="#f5f5f5"
                android:textSize="18dp"
                android:backgroundTint="#0C274E"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>