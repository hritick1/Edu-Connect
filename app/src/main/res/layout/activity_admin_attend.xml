<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminAnnounceActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"></include>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="15dp"
                android:minHeight="48dp"
                android:background="@color/white"
                android:textColorHint="@color/black"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Subject"
                android:textSize="20sp"
                android:id="@+id/subject"
                ></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/black"
                android:minHeight="48dp"
                android:background="@color/white"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Class Date"
                android:textSize="20sp"
                android:id="@+id/date"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/black"
                android:minHeight="48dp"
                android:background="@color/white"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Present/Absent"
                android:textSize="20sp"
                android:id="@+id/attendance"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/black"
                android:minHeight="48dp"
                android:background="@color/white"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="Enter Topic Taught"
                android:textSize="20sp"
                android:id="@+id/topic"></EditText>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/update"
                android:text="Update"
                android:textStyle="bold"
                android:textColor="#f5f5f5"
                android:textSize="15dp"
                android:backgroundTint="#0C274E"></Button>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/view"
                android:text="View "
                android:textStyle="bold"
                android:textColor="#f5f5f5"
                android:textSize="15dp"
                android:backgroundTint="#0C274E"></Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>